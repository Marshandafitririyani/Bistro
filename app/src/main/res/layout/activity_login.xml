<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context="com.maruchan.ui.login.LoginActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:src="@drawable/img_login"
            android:layout_margin="@dimen/_5sdp"
            android:scaleType="fitXY"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/poppinsregular"
            android:text="Phone/Email"
            android:textStyle="bold"
            android:textColor="@color/army"
            android:textSize="@dimen/_15ssp" />

        <EditText
            android:id="@+id/et_phone_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:padding="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/custome_background_search"
            android:drawablePadding="@dimen/_8sdp"
            android:fontFamily="@font/poppinsregular"
            android:gravity="start"
            android:textColor="@color/army"
            android:hint="Phone or Email"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="@dimen/_12ssp"
            tools:ignore="Autofill,LabelFor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/poppinsregular"
            android:text="Password"
            android:textStyle="bold"
            android:textColor="@color/army"
            android:textSize="@dimen/_15ssp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:hintEnabled="false"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            app:passwordToggleTint="@color/army"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:autofillHints="password"
                android:background="@drawable/custome_background_search"
                android:drawablePadding="@dimen/_8sdp"
                android:inputType="textPassword"
                android:textColor="@color/army"
                android:hint="Password"
                android:singleLine="true"
                android:textSize="@dimen/_12ssp"
                tools:ignore="LabelFor" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/btn_login_"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:background="@drawable/custom_layout_login"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center"
            android:text="Login"
            android:layout_marginTop="@dimen/_190sdp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_have_an_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:text="Don't have An Account?"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/tv_sing_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:foreground="?selectableItemBackground"
                android:text="Register"
                android:textColor="@color/blue"
                android:textSize="@dimen/_13ssp" />
        </LinearLayout>
    </LinearLayout>
</layout>
