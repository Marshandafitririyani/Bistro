<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.maruchan.bistro.data.room.bistroo.BistroList" />

        <variable
            name="history"
            type="com.maruchan.bistro.data.room.bistroo.StatusCategoryTwo" />

        <variable
            name="detail"
            type="com.maruchan.ui.menu.bakery.BakeryActivity" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparant">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.maruchan.ui.menu.bakery.BakeryActivity">

            <LinearLayout
                android:id="@+id/linear_bakery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/btn_back"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:foreground="?selectableItemBackground"
                        android:labelFor="@+id/btn_back"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_back_black"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/bakery_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_85sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/poppinsmedium"
                        android:gravity="center"
                        android:text="@string/menu"
                        android:textColor="@color/army"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_home_horizontala"
                    tools:ignore="ContentDescription" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btn_img_one"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:contentDescription="@string/todo2"
                            android:foreground="?selectableItemBackground"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_caffee_slider" />

                        <ImageView
                            android:id="@+id/btn_img_two"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:foreground="?selectableItemBackground"
                            android:labelFor="@+id/btn_img_two"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_pizza_slider"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/btn_img_tree"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:foreground="?selectableItemBackground"
                            android:labelFor="@+id/btn_img_tree"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_nasgor_slider"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:foreground="?selectableItemBackground"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_lumpia"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:contentDescription="@string/todo2"
                            android:foreground="?selectableItemBackground"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_sat" />

                        <ImageView
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:contentDescription="@string/todo2"
                            android:foreground="?selectableItemBackground"
                            android:src="@drawable/img_rw" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:contentDescription="@string/todo2"
                            android:foreground="?selectableItemBackground"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_nod" />

                        <ImageView
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:contentDescription="@string/todo2"
                            android:foreground="?selectableItemBackground"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_ud" />

                        <ImageView
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:contentDescription="@string/todo2"
                            android:foreground="?selectableItemBackground"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_chi" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_10sdp"
                        android:contentDescription="@string/todo2"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:contentDescription="@string/todo2"
                            android:foreground="?selectableItemBackground"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_spgeti" />

                        <ImageView
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:contentDescription="@string/todo2"
                            android:foreground="?selectableItemBackground"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_burger" />

                        <ImageView
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:contentDescription="@string/todo2"
                            android:foreground="?selectableItemBackground"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_hdg" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:contentDescription="@string/todo2"
                            android:foreground="?selectableItemBackground"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_sushi" />

                        <ImageView
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:contentDescription="@string/todo2"
                            android:foreground="?selectableItemBackground"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_hot" />

                        <ImageView
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:contentDescription="@string/todo2"
                            android:foreground="?selectableItemBackground"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_dimsum" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>
